<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Library Management System</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>com.klu.SignupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/SignupServlet</url-pattern>
    </servlet-mapping>
    

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.klu.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
	<servlet>
    <servlet-name>FeedbackServlet</servlet-name>
    <servlet-class>com.klu.FeedbackServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>FeedbackServlet</servlet-name>
    <url-pattern>/FeedbackServlet</url-pattern>
</servlet-mapping>
    
    <servlet>
        <servlet-name>AddBookServlet</servlet-name>
        <servlet-class>com.klu.AddBookServlet</servlet-class>
        <multipart-config>
    <max-file-size>10485760</max-file-size>
    <max-request-size>52428800</max-request-size>
    <file-size-threshold>2097152</file-size-threshold>
</multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddBookServlet</servlet-name>
        <url-pattern>/AddBookServlet</url-pattern>
        
    </servlet-mapping>

    <servlet>
        <servlet-name>EditBookServlet</servlet-name>
        <servlet-class>com.klu.EditBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditBookServlet</servlet-name>
        <url-pattern>/EditBookServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteBookServlet</servlet-name>
        <servlet-class>com.klu.DeleteBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteBookServlet</servlet-name>
        <url-pattern>/DeleteBookServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.klu.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet>
    <servlet-name>ForgotPasswordServlet</servlet-name>
    <servlet-class>com.klu.ForgotPasswordServlet</servlet-class>
</servlet>
	<servlet-mapping>
	    <servlet-name>ForgotPasswordServlet</servlet-name>
	    <url-pattern>/ForgotPasswordServlet</url-pattern>
	</servlet-mapping>
	<servlet>
    <servlet-name>ListBooksServlet</servlet-name>
    <servlet-class>com.klu.ListBooksServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>ListBooksServlet</servlet-name>
    <url-pattern>/ListBooksServlet</url-pattern>
</servlet-mapping>
<servlet>
        <servlet-name>RequestBooksServlet</servlet-name>
        <servlet-class>com.klu.RequestBooksServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RequestBooksServlet</servlet-name>
        <url-pattern>/RequestBooksServlet</url-pattern>
    </servlet-mapping>

    <!-- End of servlet mappings -->
    
</web-app>
